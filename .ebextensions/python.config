option_settings:
  "aws:elasticbeanstalk:container:python":
    WSGIPath: app:app
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_download_resources.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      wget -O /var/app/ondeck/recursos "https://drive.google.com/uc?export=download&id=11Fuw9lt8bAN4FZUp5n75EJRwDCchjnFG"
container_commands:
  01_move_file:
    command: "mv /var/app/ondeck/recursos /var/app/current/recursos"
